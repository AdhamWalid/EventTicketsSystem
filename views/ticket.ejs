      <h3><%= event.title %></h3>
    </div>

    <div class="ticket-section">
      <div><strong>Name:</strong> <%= name %></div>
      <div><strong>Email:</strong> <%= email %></div>
      <div><strong>Artist:</strong> <%= event.artist %></div>
      <div><strong>Location:</strong> <%= event.location %>, <%= event.country %></div>
      <div><strong>Date:</strong> <%= new Date(event.date).toDateString() %></div>
      <div><strong>Tickets:</strong> <%= ticketCount %></div>
      <div><strong>Total Paid:</strong> RM<%= total %></div>
      <div><strong>Transaction ID:</strong> <%= transactionId.slice(-6).toUpperCase() %></div>
