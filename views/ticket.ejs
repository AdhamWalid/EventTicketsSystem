  } */

  .ticket {
    max-width: 700px;
    margin: 50px auto;
    border: 2px dashed #487aff;
    border-radius: 12px;
    padding: 30px;
    background: #1e2133;
    box-shadow: 0 0 40px rgba(72, 138, 255, 0.3);
    
  }

  .ticket-header {
    text-align: center;
    margin-bottom: 20px;
  }

  .ticket-header h2, .ticket-header h3 {
    color: #fff;
  }

  .ticket-section {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 20px;
    font-size: 1em;
  }

  .ticket-section div {
    flex: 1 1 45%;
    color: #ccc;
  }

  .qr-code {
    text-align: center;
    margin-top: 30px;
  }

  .ticket-footer {
    text-align: center;
    margin-top: 30px;
    font-size: 0.85em;
    color: #aaa;
  }

  img {
    border-radius: 10px;
  }

  .qr-code img {
  border: 3px solid #487aff;
  padding: 10px;
  background-color: #1a1c2e;
  border-radius: 12px;
  box-shadow: 0 0 15px rgba(72, 138, 255, 0.5),
              0 0 25px rgba(72, 138, 255, 0.3),
              0 0 35px rgba(72, 138, 255, 0.2);
  animation: pulseGlow 2.5s ease-in-out infinite;
  transition: transform 0.3s ease;
}

.qr-code img:hover {
  transform: scale(1.05);
}

@keyframes pulseGlow {
  0% {
    box-shadow: 0 0 15px rgba(72, 138, 255, 0.5),
                0 0 25px rgba(72, 138, 255, 0.3),
                0 0 35px rgba(72, 138, 255, 0.2);
  }
  50% {
    box-shadow: 0 0 25px rgba(72, 138, 255, 0.9),
                0 0 35px rgba(72, 138, 255, 0.6),
                0 0 45px rgba(72, 138, 255, 0.4);
  }
  100% {
    box-shadow: 0 0 15px rgba(72, 138, 255, 0.5),
                0 0 25px rgba(72, 138, 255, 0.3),
                0 0 35px rgba(72, 138, 255, 0.2);
  }
}

</style>


</head>
<body>

  <div class="ticket">
    <div class="ticket-header">
