<style>

    body {
  background: #0d0f1f;
  color: #fff;
  font-family: 'Poppins', sans-serif;
  position: relative;
  overflow-x: hidden;
}

/* Holographic background pattern */
body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url("data:image/svg+xml,%3Csvg width='200' height='200' xmlns='http://www.w3.org/2000/svg'%3E%3Cdefs%3E%3CradialGradient id='g' cx='50%25' cy='50%25' r='75%25'%3E%3Cstop offset='0%25' stop-color='%23487aff' stop-opacity='0.1'/%3E%3Cstop offset='100%25' stop-color='%230d0f1f' stop-opacity='0.01'/%3E%3C/radialGradient%3E%3C/defs%3E%3Crect width='100%25' height='100%25' fill='url(%23g)'/%3E%3C/svg%3E");
  background-size: 200px 200px;
  opacity: 0.3;
  z-index: -1;
  animation: shimmer 40s linear infinite;
}

/* Shimmer animation */
@keyframes shimmer {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: 200% 200%;
  }
}


  /* body {
    background: #0d0f1f;
